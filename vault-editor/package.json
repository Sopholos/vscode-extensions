{
  "name": "vault-editor",
  "displayName": "Vault Editor",
  "description": "This extension uses Ansible Vault to encrypt and decrypt files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "encrypted-file-editor.edit_file",
        "title": "Vault: Edit File"
      },
      {
        "command": "encrypted-file-editor.encrypt_file",
        "title": "Vault: Encrypt File"
      },
      {
        "command": "encrypted-file-editor.decrypt_file",
        "title": "Vault: Decrypt File"
      },
      {
        "command": "encrypted-file-editor.diff_file",
        "title": "Vault: Diff File"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Vault Editor Configuration",
      "properties": {
        "vaultEditor.decryptOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically decrypts text editors when they are opened and outputs the result to the 'Vault Editor' output channel."
        },
        "vaultEditor.decryptOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically decrypts text editors that are open when VsCode is started and outputs the result to the 'Vault Editor' output channel."
        },
        "vaultEditor.keysRoot": {
          "type": "string",
          "default": "",
          "description": "The path to the directory that contains your encryption keys."
        },
        "vaultEditor.diff.branch": {
          "type": "string",
          "default": "",
          "description": "If set, this branch will automatically be used to compare with."
        }
      }
    }
  },
  "extensionDependencies": [
    "vscode.git"
  ],
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "ansible-vault": "^1.1.0"
  }
}
